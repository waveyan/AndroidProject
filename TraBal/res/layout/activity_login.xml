<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp" >

        <ImageView
            android:id="@+id/back1ID"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/a005" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/biaoti" />
    </RelativeLayout>

    <EditText
        android:id="@+id/yonghu1ID"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@color/a5"
        android:hint="  用户名/邮箱"
        android:padding="10dp"
        android:textColorHint="@color/a2"
        android:textSize="15dp"
        android:drawableLeft="@drawable/a087"
         />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    <EditText
        android:id="@+id/password1ID"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@color/a5"
        android:hint=" 密码 ..."
        android:textColorHint="@color/a2"
        android:textSize="15dp" 
        android:password="true"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:drawableLeft="@drawable/a086"
        />
    
    <CheckBox 
        android:id="@+id/box"
        style="@style/custom_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
        android:layout_alignBottom="@+id/password1ID"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <EditText
            android:id="@+id/validate1ID"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@color/a5"
            android:gravity="center"
            android:hint="输入验证码..."
            android:padding="5dp"
            android:textColorHint="@color/a2"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/code1"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/validate1ID"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/validate1ID"
            android:gravity="center" />
    </RelativeLayout>

    <Button
        android:id="@+id/loginID"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:text="登录"
        android:textColor="@color/a2" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/register1ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="点我注册"
            android:textColor="@color/a2" />
    </RelativeLayout>

</LinearLayout>