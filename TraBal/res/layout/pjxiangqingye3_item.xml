<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#698B69" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/pjxqy_headpic3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/person"
            android:gravity="left" />

        <ImageView
            android:id="@+id/rightangle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rightangle" />

        <RelativeLayout
            android:id="@+id/av1ID"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/pjxqy_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="8dp"
                android:text="ABCSDFSF"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pjxqy_date3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:text="12-20"
                android:textColor="#838B8B"
                android:textSize="10dp" />

            <RatingBar
                android:id="@+id/pjxqy_stars3"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pjxqy_name3"
                android:layout_below="@id/pjxqy_name3"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/pjxqy_cyn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pjxqy_name3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/pjxqy_stars3"
                android:text="CYN"
                android:textColor="#000000"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pjxqy_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pjxqy_name3"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/pjxqy_cyn3"
                android:text="30/人"
                android:textColor="#000000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/pjxqy_pj3"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pjxqy_name3"
                android:layout_below="@id/pjxqy_stars3"
                android:layout_marginTop="3dp"
                android:text="位于写字楼下的独立咖啡馆"
                android:textColor="#000000"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/pjxqy_pic3"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_alignLeft="@id/pjxqy_pj3"
                android:layout_below="@id/pjxqy_pj3"
                android:layout_marginTop="15dp"
                android:background="@drawable/wanghong1" />

            <ImageView
                android:id="@+id/pjxqy_pic4"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_below="@id/pjxqy_pj3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/pjxqy_pic3"
                android:background="@drawable/wanghong2" />

            <ImageView
                android:id="@+id/pjxqy_pic5"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_below="@id/pjxqy_pj3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/pjxqy_pic4"
                android:background="@drawable/wanghong3" />

            <ImageView
                android:id="@+id/pjxqy_blank3"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/pjxqy_pic3" />

            <ImageView
                android:id="@+id/pjxqy_icon3"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignLeft="@id/pjxqy_name3"
                android:layout_below="@id/pjxqy_pic3"
                android:layout_marginTop="8dp"
                android:background="@drawable/icon" />

            <TextView
                android:id="@+id/pjxqy_site3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pjxqy_pic3"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/pjxqy_icon3"
                android:text="21GRAM COFFEE"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/pjxqy_love3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/pjxqy_pic3"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/pjxqy_date3"
                android:background="@drawable/love" />

            <ImageView
                android:id="@+id/pjxqy_comment3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/pjxqy_date3"
                android:layout_below="@id/pjxqy_pic3"
                android:layout_marginTop="8dp"
                android:background="@drawable/comment" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>