<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="vertical"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

        <RelativeLayout
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back" />

            <ImageButton
                android:id="@+id/favourButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/favour" />

            <ImageButton
                android:id="@+id/shareButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/share" />
        </RelativeLayout>

        <TextView
            android:id="@+id/city"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_above="@+id/times1"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="30dp"
            android:text="广州市"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/times1"
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:layout_below="@+id/navigation"
            android:layout_marginTop="10dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="240dp"
                android:src="@drawable/l1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/times1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/EnglishName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:text="Lost in L.A." />

            <TextView
                android:id="@+id/ChinaName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:text="迷失洛杉矶" />

            <TextView
                android:id="@+id/Introduction"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:text="&apos;轻松度假到LA&apos;" />

            <TextView
                android:id="@+id/OpenTimes"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:text="营业时间：10：00-22：00"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/Cost"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:text="人均消费：CNY 50/人"
                android:textSize="10sp" />

            <RelativeLayout
                android:id="@+id/Adress"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:paddingTop="7dp" >

                <ImageButton
                    android:id="@+id/AdressButton"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/adress" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/AdressButton"
                    android:fontFamily="casual"
                    android:text="番禺区大石街番禺大道北8号"
                    android:textColor="#228b22"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Tele"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/TeleButton"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/tele" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/TeleButton"
                    android:fontFamily="monospace"
                    android:text="+86-20-22878828"
                    android:textColor="#228b22"
                    android:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/Abstract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Tele"
                android:layout_marginTop="3dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="monospace"
                    android:text="Lost in L.A.位于番禺大道北，离市中心有一段不短的路程，交通也未算得上便利，但正因如此，才能有足够宽敞的空间去打造如此地道的LA氛围。这里由一对年轻的兄妹共同经营，其中Shien刚从美国帕森斯设计学院毕业归国，而在留学斯间，咖啡就已成为她生活中不可缺少的重要部分。于是归国后，便有了这家由哥哥的车行改造而成的咖啡集合空间。原本车行的大面积空间构造，和房子后的一排棕榈树，与活力热情的洛杉矶风情十分接近;加上他们那台珍藏已久的，产于1909年的福特老爷车，于是这里便成为了'Lost in L.A.'。简约舒适的店内，不只有咖啡提供，还有美食和艺术。能在广州轻松感受LA风情、这点路途就不计较了。"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Whywelikeit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Abstract"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:src="@drawable/whywelikeit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Whywelikeit"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="monospace"
                    android:text="Lost in L.A.位于番禺大道北，这里是由一对年轻的兄妹共同经营。"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/x1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/l2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/x1"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="monospace"
                    android:text="其中Tina刚从美国帕森斯设计学院毕业归国，店内处处细节均有艺术的影子"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/l3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/x2"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="每一处都经过精心设计"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/l4" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>