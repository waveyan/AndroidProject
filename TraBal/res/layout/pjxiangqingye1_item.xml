<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/atID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#EBEBEB" >

        <ImageButton
            android:id="@+id/leftarrow14ID"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/d001" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/leftarrow14ID"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/leftarrow14ID"
            android:text="评价详情"
            android:textColor="#000000"
            android:textSize="16dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/pjxqy_headpic1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/atID"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/person"
        android:gravity="left" />

    <RelativeLayout
        android:id="@+id/at1ID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/atID"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/pjxqy_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"
            android:text="ABCSDFSF"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pjxqy_level1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/pjxqy_name1"
            android:background="#698B69"
            android:gravity="center"
            android:text="Lv.1"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/pjxqy_time1"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/pjxqy_level1"
            android:background="@drawable/time" />

        <TextView
            android:id="@+id/pjxqy_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/pjxqy_time1"
            android:text="12-20"
            android:textColor="#838B8B"
            android:textSize="10dp" />

        <RatingBar
            android:id="@+id/pjxqy_stars1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pjxqy_name1"
            android:layout_below="@id/pjxqy_name1"
            android:numStars="5"
            android:stepSize="1" />

        <TextView
            android:id="@+id/pjxqy_cyn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pjxqy_name1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/pjxqy_stars1"
            android:text="CYN"
            android:textColor="#000000"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pjxqy_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pjxqy_name1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/pjxqy_cyn1"
            android:text="30/人"
            android:textColor="#000000"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/pjxqy_pj1"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pjxqy_name1"
            android:layout_below="@id/pjxqy_stars1"
            android:layout_marginTop="3dp"
            android:text="位于写字楼下的独立咖啡馆，仿佛是理想中咖啡馆甚佳的选址。几乎必点拿铁，出品很有诚意，再看15-20的均价超良心"
            android:textColor="#000000"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/pjxqy_pic"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pjxqy_pj1"
            android:layout_below="@id/pjxqy_pj1"
            android:layout_marginTop="15dp"
            android:background="@drawable/house" />

        <ImageView
            android:id="@+id/pjxqy_blank1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/pjxqy_pic" />

        <ImageView
            android:id="@+id/pjxqy_icon1"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignLeft="@id/pjxqy_name1"
            android:layout_below="@id/pjxqy_pic"
            android:layout_marginTop="8dp"
            android:background="@drawable/icon" />

        <TextView
            android:id="@+id/pjxqy_site1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pjxqy_pic"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/pjxqy_icon1"
            android:text="21GRAM COFFEE"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/pjxqy_love1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/pjxqy_pic"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/pjxqy_price1"
            android:background="@drawable/love" />

        <ImageView
            android:id="@+id/pjxqy_comment1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignRight="@id/pjxqy_date1"
            android:layout_below="@id/pjxqy_pic"
            android:layout_marginTop="8dp"
            android:background="@drawable/comment" />
    </RelativeLayout>

    <View
        android:id="@+id/pjxqy_interval2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/at1ID"
        android:layout_marginTop="1dp"
        android:background="#CFCFCF" />

    <ImageView
        android:id="@+id/pjxqy_head6"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/pjxqy_interval2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/person" />

    <ImageView
        android:id="@+id/pjxqy_head7"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/pjxqy_interval2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/person" />

    <ImageView
        android:id="@+id/pjxqy_head8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/pjxqy_interval2"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/person" />

    <ImageView
        android:id="@+id/pjxqy_head9"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/pjxqy_interval2"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/person" />

    <ImageView
        android:id="@+id/pjxqy_head10"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/pjxqy_interval2"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/person" />

    <View
        android:id="@+id/pjxqy_interval3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/pjxqy_head6"
        android:layout_marginTop="10dp"
        android:background="#CFCFCF" />

    <EditText
        android:id="@+id/pjxqy_pl1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:hint="说两句吧"
        android:textSize="12dp" />

    <Button
        android:id="@+id/pjxqy_send1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/pjxqy_pl1"
        android:background="#919191"
        android:text="发送"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

</RelativeLayout>