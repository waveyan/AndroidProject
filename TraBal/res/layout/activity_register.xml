<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/beijing">
    
     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp" >

        <ImageView
            android:id="@+id/back2ID"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/a005"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="注册Trabal!Family"
            android:textColor="@color/white"
            android:textSize="18sp" 
        />
    </RelativeLayout> 
    
    <EditText 
        android:id="@+id/yonghu2ID"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/a5"
        android:padding="5dp"
        android:layout_margin="15dp"
        android:textColorHint="@color/a2"
        android:textSize="15dp"
        android:hint="用户名/邮箱"
       
         />
     
      <EditText 
        android:id="@+id/password2ID"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/a5"
        android:padding="5dp"
        android:layout_margin="15dp"
        android:textColorHint="@color/a2"
        android:textSize="15dp"
        android:hint="密码  ..."
       
         />
      
      <EditText 
        android:id="@+id/comfirmID"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/a5"
        android:padding="5dp"
        android:layout_margin="15dp"
        android:textColorHint="@color/a2"
        android:textSize="15dp"
        android:hint="确认密码  ..."/>
      
    <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp" >
        
      <EditText 
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@color/a5"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="20dp"
        android:id="@+id/validate2ID"
        android:textColorHint="@color/a2"
        android:textSize="15dp"
        android:hint="输入验证码..."
       />
      
      <ImageView 
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/validate2ID"
        android:layout_alignBottom="@+id/validate2ID"
        android:layout_marginRight="20dp"
        android:id="@+id/code2"
          />
      
     </RelativeLayout>
     <Button 
        android:id="@+id/register2ID"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:textColor="@color/a2"
        android:text="Join us!"  
          />
      
   
    

</LinearLayout>
