<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="vertical"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

        <RelativeLayout
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back" />

            <ImageButton
                android:id="@+id/favourButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/favour" />

            <ImageButton
                android:id="@+id/shareButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/share" />
        </RelativeLayout>

        <TextView
            android:id="@+id/city"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_above="@+id/times1"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="30dp"
            android:text="广州市"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/times1"
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:layout_below="@+id/navigation"
            android:layout_marginTop="10dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="240dp"
                android:src="@drawable/t1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/times1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/EnglishName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:text="Times Museum Guangzhou" />

            <TextView
                android:id="@+id/ChinaName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:text="广州时代美术馆" />

            <TextView
                android:id="@+id/Introduction"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:text="&apos;开在居民楼的顶层&apos;" />

            <TextView
                android:id="@+id/OpenTimes"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:text="营业时间：11：00-22：00"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/Cost"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:text="人均消费：CNY 12/人"
                android:textSize="10sp" />

            <RelativeLayout
                android:id="@+id/Adress"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:paddingTop="7dp" >

                <ImageButton
                    android:id="@+id/AdressButton"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/adress" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/AdressButton"
                    android:fontFamily="casual"
                    android:text="白云区黄边北路时代玫瑰园三期时代美术馆19楼"
                    android:textColor="#228b22"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Tele"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/TeleButton"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/tele" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/TeleButton"
                    android:fontFamily="monospace"
                    android:text="+86-18022309155"
                    android:textColor="#228b22"
                    android:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/Abstract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Tele"
                android:layout_marginTop="3dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="monospace"
                    android:text="时代美术馆邀请雷姆·库哈斯和阿兰·弗劳克斯共同完成设计,于2010年9月落成。这是雷姆·库哈斯继央视新大楼后.在中国的第二件建筑设计作品。时代美术馆在接近机场的黄边地铁站边，内嵌在居民楼中，展厅设在19楼顶层，不是简单的设计门面，而是专门设置了直通顶层的两部电梯，形式新颖。"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Whywelikeit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Abstract"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:src="@drawable/whywelikeit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Whywelikeit"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="monospace"
                    android:text="美术馆在一楼开设艺术商品区，拥有书店和咖啡厅的休息空间，在19楼开设艺术展厅和花遇花店，在黄边的19楼，对面是山，视野开阔。"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/x1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="210dp"
                    android:src="@drawable/t2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/x1"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="monospace"
                    android:text="广东时代美术馆邀请艺术家进行开放的驻地创作，打破美术馆只呈现完成作品的常规，引入艺术家的创作过程，并让观众与艺术家进行零距离交流。"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="210dp"
                    android:src="@drawable/t3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/x2"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="光影与展品结合，呈现形式更加先锋"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:src="@drawable/t4" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>