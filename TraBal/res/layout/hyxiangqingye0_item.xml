<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#698B69"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/anID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/amID"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:src="@drawable/b004" />

            <Button
                android:id="@+id/leftID"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/d003" />

            <TextView
                android:id="@+id/tvID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/leftID"
                android:layout_marginLeft="240dp"
                android:layout_toRightOf="@id/leftID"
                android:text="已关注"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

            <Button
                android:id="@+id/hyxqy_headpic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/tvID"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/person" />

            <TextView
                android:id="@+id/hyxqy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hyxqy_headpic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="ABCSDFSF"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/judgeID"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/hyxqy_name"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="评价"
                android:textColor="#698B69"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/hyxqy_headpic1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/anID"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/person"
            android:gravity="left" />

        <ImageView
            android:id="@+id/ltriangleID"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/anID"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/hyxqy_headpic1"
            android:background="@drawable/ltriangle" />

        <RelativeLayout
            android:id="@+id/an2ID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/anID"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/hyxqy_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="8dp"
                android:text="ABCSDFSF"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/level"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/hyxqy_name1"
                android:background="#698B69"
                android:gravity="center"
                android:text="Lv.1"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/ivID"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/level"
                android:background="@drawable/time" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/ivID"
                android:text="12-20"
                android:textColor="#838B8B"
                android:textSize="10dp" />

            <RatingBar
                android:id="@+id/starsID"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/hyxqy_name1"
                android:layout_below="@id/hyxqy_name1"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/cyn1ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hyxqy_name1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/starsID"
                android:text="CYN"
                android:textColor="#000000"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv1ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hyxqy_name1"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/cyn1ID"
                android:text="30/人"
                android:textColor="#000000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tx9ID"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/hyxqy_name1"
                android:layout_below="@id/starsID"
                android:layout_marginTop="3dp"
                android:text="位于写字楼下的独立咖啡馆，仿佛是理想中咖啡馆甚佳的选址。几乎必点拿铁，出品很有诚意，再看15-20的均价超良心"
                android:textColor="#000000"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/blankID"
                android:layout_width="250dp"
                android:layout_height="19dp"
                android:layout_below="@id/tx9ID" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>