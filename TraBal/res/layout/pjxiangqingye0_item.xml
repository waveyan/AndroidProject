<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <RelativeLayout
        android:id="@+id/asID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#EBEBEB" >

        <ImageButton
            android:id="@+id/leftarrow13ID"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/d001" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/leftarrow13ID"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/leftarrow13ID"
            android:text="评价详情"
            android:textColor="#000000"
            android:textSize="16dp" />
    </RelativeLayout>
    
    <Button
            android:id="@+id/pjxqy_headpic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/asID"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/person"
            android:gravity="left" />
    
    <RelativeLayout
            android:id="@+id/as1ID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/asID"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/pjxqy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="8dp"
                android:text="ABCSDFSF"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pjxqy_level"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/pjxqy_name"
                android:background="#698B69"
                android:gravity="center"
                android:text="Lv.1"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/pjxqy_time"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/pjxqy_level"
                android:background="@drawable/time" />

            <TextView
                android:id="@+id/pjxqy_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/pjxqy_time"
                android:text="12-20"
                android:textColor="#838B8B"
                android:textSize="10dp" />

            <RatingBar
                android:id="@+id/pjxqy_stars"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pjxqy_name"
                android:layout_below="@id/pjxqy_name"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/pjxqy_cyn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pjxqy_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/pjxqy_stars"
                android:text="CYN"
                android:textColor="#000000"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pjxqy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pjxqy_name"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/pjxqy_cyn"
                android:text="30/人"
                android:textColor="#000000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/pjxqy_pj"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pjxqy_name"
                android:layout_below="@id/pjxqy_stars"
                android:layout_marginTop="3dp"
                android:text="位于写字楼下的独立咖啡馆，仿佛是理想中咖啡馆甚佳的选址。几乎必点拿铁，出品很有诚意，再看15-20的均价超良心"
                android:textColor="#000000"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/pjxqy_blank"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/pjxqy_pj" />

            <ImageView
                android:id="@+id/pjxqy_icon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignLeft="@id/pjxqy_name"
                android:layout_below="@id/pjxqy_pj"
                android:layout_marginTop="8dp"
                android:background="@drawable/icon" />

            <TextView
                android:id="@+id/pjxqy_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pjxqy_pj"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/pjxqy_icon"
                android:text="21GRAM COFFEE"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/pjxqy_love"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/pjxqy_pj"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/pjxqy_price"
                android:background="@drawable/love" />


            <ImageView
                android:id="@+id/pjxqy_comment"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/pjxqy_date"
                android:layout_below="@id/pjxqy_pj"
                android:layout_marginTop="8dp"
                android:background="@drawable/comment" />
        </RelativeLayout>
    
    <View
                android:id="@+id/pjxqy_interval"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:layout_below="@id/as1ID"
                android:background="#CFCFCF" />
    
    <ImageView
                android:id="@+id/pjxqy_head1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/pjxqy_interval"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/person" />

            <ImageView
                android:id="@+id/pjxqy_head2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/pjxqy_interval"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/person" />

            <ImageView
                android:id="@+id/pjxqy_head3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/pjxqy_interval"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/person" />

            <ImageView
                android:id="@+id/pjxqy_head4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/pjxqy_interval"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/person" />

            <ImageView
                android:id="@+id/pjxqy_head5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/pjxqy_interval"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/person" />
            
            <View
                android:id="@+id/pjxqy_interval1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/pjxqy_head1"
                android:background="#CFCFCF" />
            
            <EditText 
                android:id="@+id/pjxqy_pl"
                android:hint="说两句吧"
                android:textSize="12dp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
            
            <Button 
               android:id="@+id/pjxqy_send"
                android:text="发送"
                android:textSize="12dp"
                android:textColor="#FFFFFF"
                android:background="#919191"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/pjxqy_pl" />

</RelativeLayout>
