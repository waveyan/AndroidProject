<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/aqID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:scaleType="fitXY"
                android:src="@drawable/b004" />
            <ImageButton
            android:id="@+id/back_pingjia8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/d001" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/left3ID"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="关注"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <com.trabal.CircleImageView
                android:id="@+id/hyxqy_headpic6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:background="@drawable/person" />

            <TextView
                android:id="@+id/hyxqy_name6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hyxqy_headpic6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="ABCSDFSF"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/judge3ID"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/hyxqy_name6"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="评价"
                android:textColor="#698B69"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>