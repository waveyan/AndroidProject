<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/syxqy_pic1"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:background="@drawable/wanghong4" />

    <TextView
        android:id="@+id/syxqy_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/syxqy_pic1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="9dp"
        android:text="福田区购物公园地铁站外，是深圳“公园式”情景空间的购物中心COCO Park，这里也是福田CBD主要生活商业区。"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/syxqy_map"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/map" />

        <TextView
            android:id="@+id/syxqy_maptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:text="查看商圈地图"
            android:textColor="#828282"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>